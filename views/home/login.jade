.login_wrap
  form(method="post",action="/login")
    fieldset
      legend Login using your Nodester.com Credentials
      p
        label(for="user[user]") 
          span.label Username:
          input(type:"text", name:"user[user]", class:"input r5 "))
      p
        label(for="user[pass]")
          span.label Password:
          input(type:"password", name:"user[pass]", class:"input r5 "))
      p.buttons
          input.submit.r5.bluegrad(type="submit", value="Login")